pipeline {
    agent any

    environment {
        // Définissez ici des variables d'environnement nécessaires pour votre build
        NODEJS_HOME = tool 'Node.js' // Assurez-vous d'avoir une installation Node.js configurée dans Jenkins
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Récupérer le code depuis le référentiel Git
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Installer les dépendances Node.js
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                // Construire l'application
                script {
                    sh 'npm run build'
                }
            }
        }

        stage('Test') {
            steps {
                // Exécuter les tests
                script {
                    sh 'npm test'
                }
            }
        }

        stage('Deployment') {
            steps {
                // Déployer l'application (ajoutez vos propres commandes de déploiement ici)
                script {
                    echo 'Déploiement de l\'application...'
                    // Ajoutez vos commandes de déploiement ici
                }
            }
        }

        stage('Demo') {
            steps {
                // Exécuter quelque chose pour la démo (ajoutez vos propres commandes de démo ici)
                script {
                    echo 'Exécution de la démo...'
                    // Ajoutez vos commandes de démo ici
                }
            }
        }
    }

    post {
        success {
            // Cette section s'exécute en cas de succès du pipeline
            echo 'Le pipeline a été exécuté avec succès!'
        }
        failure {
            // Cette section s'exécute en cas d'échec du pipeline
            echo 'Le pipeline a échoué. Veuillez vérifier les étapes précédentes.'
        }
    }
}
