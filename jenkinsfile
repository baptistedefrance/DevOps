pipeline {
    agent any

    environment {
        NODEJS_HOME = tool 'Node.js'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Check Express Dependency') {
            steps {
                script {
                    def packageJson = readJSON file: 'package.json'
                    def expressVersion = packageJson.dependencies.express

                    if (expressVersion == null) {
                        error 'La dépendance Express n\'a pas été trouvée dans le fichier package.json'
                    } else {
                        echo "La version de Express est: ${expressVersion}"
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'npm run build'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'npm test'
                }
            }
        }

        stage('Deployment') {
            steps {
                script {
                    echo 'Déploiement de l\'application...'
                    // Ajoutez vos commandes de déploiement ici
                }
            }
        }

        stage('Demo') {
            steps {
                script {
                    echo 'Exécution de la démo...'
                    // Ajoutez vos commandes de démo ici
                }
            }
        }
    }

    post {
        success {
            echo 'Le pipeline a été exécuté avec succès!'
        }
        failure {
            echo 'Le pipeline a échoué. Veuillez vérifier les étapes précédentes.'
        }
    }
}
